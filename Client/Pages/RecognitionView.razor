@page "/recognition"

<div class="w-full mx-auto flex space-x-12">
    <div class="w-7/12 mx-auto space-y-6">
        <div class="w-full mx-auto bg-white shadow-md rounded-md p-2">
            <InputFile OnChange="@LoadFiles" class="p-4 w-full border-4 border-blue-900 hover:border-blue-700 border-dashed rounded-md flex items-center justify-center space-x-4 border-animation">
                <svg class="h-9 w-9 p-1" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8.125 4.375H6.875V6.875H4.375V8.125H6.875V10.625H8.125V8.125H10.625V6.875H8.125V4.375ZM7.5 1.25C4.05 1.25 1.25 4.05 1.25 7.5C1.25 10.95 4.05 13.75 7.5 13.75C10.95 13.75 13.75 10.95 13.75 7.5C13.75 4.05 10.95 1.25 7.5 1.25ZM7.5 12.5C4.74375 12.5 2.5 10.2563 2.5 7.5C2.5 4.74375 4.74375 2.5 7.5 2.5C10.2563 2.5 12.5 4.74375 12.5 7.5C12.5 10.2563 10.2563 12.5 7.5 12.5Z" fill="#5B5E72" />
                </svg>
                <p class="text-gray-600 text-md font-normal">Add meg az elemezni kívánt képet</p>
            </InputFile>
        </div>
        <div class="w-full mx-auto bg-white shadow-md rounded-md">
            <label class="input-container">
                <span class="header-label text-gray-500">Elvárt kimenet</span>
                <input type="text" class="input-field focus:ring-blue-700 focus:border-blue-700 hover:border-blue-700 border-animation" />
            </label>
        </div>
    </div>

    <div class="w-5/12 mx-auto self-center">
        <div class="w-full mx-auto divide-x divide-white shadow-md flex">
            <button class="w-1/2 p-4 bg-blue-900 hover:bg-blue-700 rounded-l-md flex items-center justify-center background-animation">

                <p class="text-white text-sm font-normal">Elemzés indítása</p>
            </button>
            <button class="w-1/2 p-4 bg-blue-900 hover:bg-blue-700 rounded-r-md flex items-center justify-center background-animation">
                <p class="text-white text-sm font-normal">Kimenet elemzése</p>
            </button>
        </div>
    </div>


    @if (isLoading)
    {
        <p>Uploading...</p>
    }
    else
    {
        
    }

</div>
